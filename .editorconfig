# top-most EditorConfig file
root = true

# Default settings for all files
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
indent_style = space
indent_size = 2
trim_trailing_whitespace = true

# Makefile exceptions (tabs required)
[Makefile]
indent_style = tab

# Markdown: don't strip trailing spaces, 2-space indent for lists
[*.md]
trim_trailing_whitespace = false
indent_size = 2

# JSON/YAML: consistent 2-space indent
[*.{json,yml,yaml}]
indent_size = 2

# TypeScript/JavaScript: enforce 2-space indent
[*.{ts,tsx,js,jsx}]
indent_size = 2
indent_style = space

# Config files (env files donâ€™t need final newline)
[*.env]
insert_final_newline = false
