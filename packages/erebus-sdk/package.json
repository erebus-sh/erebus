{
  "name": "@erebus-sh/sdk",
  "version": "0.0.179",
  "type": "module",
  "repository": "github:erebus-sh/erebus",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "private": false,
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "clean": "rm -rf dist",
    "lint": "bun eslint src/client/core/** --ext .ts,.tsx",
    "clean:types": "rm -rf dist/types",
    "build:sdk": "tsdown --config build.config.ts",
    "bundler:build:types": "tsc --project tsconfig.json --emitDeclarationOnly",
    "bundler:build:types:check": "tsc --project tsconfig.json --noEmit",
    "check-types": "bun run bundler:build:types:check",
    "build": "bun run clean && bun run build:sdk",
    "build:dev": "NODE_ENV=development bun run build:sdk",
    "build:prod": "NODE_ENV=production bun run clean && bun run build:sdk",
    "format": "bunx prettier . --write",
    "test": "vitest run",
    "test:react": "vitest run --config vitest.jsdom.config.ts",
    "test:logger:dev": "NODE_ENV=development bun run scripts/test-logger.ts",
    "test:logger:prod": "NODE_ENV=production bun run scripts/test-logger.ts",
    "verify:production": "bun run scripts/verify-production-build.ts",
    "knip": "knip",
    "version:beta": ""
  },
  "devDependencies": {
    "@eslint/compat": "^1.3.2",
    "@eslint/eslintrc": "^3.3.1",
    "@eslint/js": "^9.35.0",
    "@rollup/plugin-typescript": "^12.1.4",
    "@testing-library/react": "^16.3.0",
    "@types/bun": "latest",
    "@types/node": "^24.5.2",
    "eslint-import-resolver-typescript": "^4.4.4",
    "jsdom": "^26.1.0",
    "knip": "^5.64.0",
    "prettier": "3.6.2",
    "tsdown": "^0.14.2",
    "vitest": "^3.2.4",
    "eslint": "^9.36.0",
    "eslint-plugin-import": "^2.32.0",
    "typescript-eslint": "^8.44.1",
    "@typescript-eslint/parser": "^8.44.0"
  },
  "peerDependencies": {
    "typescript": "^5.9.2",
    "react": "^18 || ^19",
    "zustand": "^4 || ^5"
  },
  "dependencies": {
    "@changesets/cli": "^2.29.7",
    "@hono/node-server": "^1.18.2",
    "@hono/zod-validator": "^0.7.2",
    "hono": "^4.9.1",
    "ky": "^1.8.2",
    "nanoid": "^5.1.5",
    "zod": "^4.0.17"
  },
  "exclude": [
    "test_projects"
  ],
  "exports": {
    "./package.json": "./package.json",
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./client": {
      "types": "./dist/client/core/index.d.ts",
      "import": "./dist/client/core/index.js",
      "require": "./dist/client/core/index.cjs"
    },
    "./react": {
      "types": "./dist/client/react/index.d.ts",
      "import": "./dist/client/react/index.js",
      "require": "./dist/client/react/index.cjs"
    },
    "./server": {
      "types": "./dist/server/index.d.ts",
      "import": "./dist/server/index.js",
      "require": "./dist/server/index.cjs"
    },
    "./server/next": {
      "types": "./dist/server/adapter/next/index.d.ts",
      "import": "./dist/server/adapter/next/index.js",
      "require": "./dist/server/adapter/next/index.cjs"
    },
    "./service": {
      "types": "./dist/service/index.d.ts",
      "import": "./dist/service/index.js",
      "require": "./dist/service/index.cjs"
    }
  },
  "files": [
    "dist"
  ],
  "description": "To install dependencies:",
  "directories": {
    "example": "examples",
    "test": "tests"
  },
  "keywords": [
    "real-time",
    "cloudflare",
    "durable-object",
    "pubsub",
    "messaging",
    "websocket",
    "typescript",
    "react",
    "serverless",
    "edge",
    "distributed",
    "event-driven",
    "sdk",
    "api",
    "subscription",
    "publish-subscribe",
    "state-sync",
    "cloud",
    "microservices"
  ],
  "author": "Erebus",
  "license": "MIT",
  "typesVersions": {
    "*": {
      "client": [
        "dist/client/core/index.d.ts"
      ],
      "react": [
        "dist/client/react/index.d.ts"
      ],
      "server": [
        "dist/server/index.d.ts"
      ],
      "server/next": [
        "dist/server/adapter/next/index.d.ts"
      ],
      "service": [
        "dist/service/index.d.ts"
      ],
      "*": [
        "dist/index.d.ts"
      ]
    }
  }
}
